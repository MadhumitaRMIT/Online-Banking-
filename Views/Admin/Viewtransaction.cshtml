
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Mvc.Core.Common
@model IEnumerable<Account>
@{
    ViewData["Title"] = "Viewtransaction";
    var customer = (Customer)ViewBag.Customer;
}

<h1>View Accounts</h1>

<div>
    <h1>Transactions for @customer.Name</h1>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
            <th>@Html.DisplayNameFor(model => model.AccountType)</th>
            <th>@Html.DisplayNameFor(model => model.Balance)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AccountNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.AccountType)</td>
                <td>@Html.DisplayFor(modelItem => item.Balance)</td>

                <td>
                    <a class="btn btn-primary"
                       asp-action="Viewtransactionlist" asp-route-id="@item.AccountNumber">View Transaction</a>
                </td>
            </tr>
        }
    </table>


</div>