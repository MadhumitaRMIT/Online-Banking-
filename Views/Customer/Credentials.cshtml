<!-- Credentails Page... -->

@model Login
@{
    ViewData["Title"] = "Credentials";
}

<h1>Edit Credentials</h1>
<p>Please fill in this form to Update your Credentials.</p>
<hr>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Credentials">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Password" class="control-label"><b>Password:</b></label>
                <input type="password" name="Password" class="form-control" value="@ViewBag.Password"
                       data-val="true" data-val-required="The Password field is required." />
                @Html.ValidationMessage("Password", new { @class = "text-danger" })
                <br />

                <label for="ConfirmPAssword" class="control-label"><b>Confirm Password:</b></label>
                <input type="password" name="ConfirmPAssword" class="form-control" value="@ViewBag.ConfirmPAssword"
                       data-val="true"
                       data-val-required="The Retype Password field is required." />
                @Html.ValidationMessage("ConfirmPAssword", new { @class = "text-danger" })
                <br />

                <!-- <label for="LoginID" class="control-label"><b>LoginID</b></label>
    <input type="number" name="LoginID" class="form-control" value="@ViewBag.LoginID"
           data-val="true"
           data-val-required="The CustomerID field is required." />
    @Html.ValidationMessage("LoginID", new { @class = "text-danger" })-->

            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to Accounts</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
