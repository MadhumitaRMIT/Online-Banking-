<!-- EditDetails Page... -->

@model Account
@{
    ViewData["Title"] = "Edit Details";
}

<h1>Edit Personal Details</h1>
<p>Please fill in this form to Update your personal details.</p>
<hr>


<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Name" class="control-label"><b>Name:</b></label>
                <input type="text" name="Name" class="form-control" value="@ViewBag.Name"
                       data-val="true" data-val-required="The Name field is required." />
                @Html.ValidationMessage("Name", new { @class = "text-danger" })
                <br />
                <label for="Phone" class="control-label"><b>Phone Number:</b></label>
                +61<input type="number" name="Phone" class="form-control" value="@ViewBag.Phone"
                          data-val="true"
                          data-val-required="The Phone Number field is required." />
                @Html.ValidationMessage("Phone", new { @class = "text-danger" })
                <br />
                <label for="Address" class="control-label"><b>Address:</b></label>
                <input type="text" name="Address" class="form-control" value="@ViewBag.Address"
                       data-val="true"
                       data-val-required="The Address field is required." />
                @Html.ValidationMessage("Address", new { @class = "text-danger" })

                <br />
                <label for="TFN" class="control-label"><b>TFN Number:</b></label>
                <input type="number" name="TFN" class="form-control" value="@ViewBag.TFN"
                       data-val="true" data-val-number="The field TFN must be a Number."
                       pattern=".{9,9}"
                       data-val-required="The TFN field is required." />
                @Html.ValidationMessage("TFN", new { @class = "text-danger" })
                <br />
                <label for="City" class="control-label"><b>City:</b></label>
                <input type="text" name="City" class="form-control" value="@ViewBag.City"
                       data-val="true"
                       data-val-required="The City field is required." />
                @Html.ValidationMessage("City", new { @class = "text-danger" })
                <br />
                <label for="State" class="control-label"><b>State:</b></label>
                <select name="State" class="form-control" value="@ViewBag.State"
                        data-val="true"
                        data-val-required="The State field is required.">

                    <option name="act" value="act">Australian Capital Territory</option>
                    <option name="nsw" value="nsw">New South Wales</option>
                    <option name="nt" value="nt">Northern Territory</option>
                    <option name="qld" value="qld">Queensland</option>
                    <option name="sa" value="sa">South Australia</option>
                    <option name="tas" value="tas">Tasmania</option>
                    <option name="vic" value="vic">Victoria</option>
                    <option name="wa" value="wa">Western Australia</option>

                </select>
                @Html.ValidationMessage("State", new { @class = "text-danger" })
                <br />
                <label for="PostCode" class="control-label"><b>Post Code:</b></label>
                <input type="number" name="PostCode" class="form-control" value="@ViewBag.PostCode"
                       data-val="true" data-val-number="The field Post Code must be a Number."
                       data-val-required="The Post code field is required." />
                @Html.ValidationMessage("PostCode", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to Accounts</a>
    <br/>
    
    <a asp-action="Credentials">Change Credentials</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
